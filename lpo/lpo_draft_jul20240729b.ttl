@prefix lpo: <https://github.com/kgeographer/_graph/blob/main/lpo/lpo_draft_jul20240729b.ttl#> .
@prefix geojson: <https://purl.org/geojson/vocab#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .

# draft ontology supporting Linked Places format
# https://github.com/LinkedPasts/linked-places-format

# GeoJSON Feature Class
geojson:Feature a rdfs:Class ;
    rdfs:label "GeoJSON Feature" ;
    rdfs:comment "A feature in a GeoJSON FeatureCollection, representing a place in LPF." .

# Place as a subclass of GeoJSON Feature
lpo:Place a rdfs:Class ;
    rdfs:subClassOf geojson:Feature ;
    rdfs:label "Place" ;
    rdfs:comment "A description of a place in the world, inheriting properties of a GeoJSON feature." .

lpo:title a owl:DatatypeProperty ;
    rdfs:label "title" ;
    rdfs:comment "User-supplied primary variant or display name for a place." ;
    rdfs:domain lpo:Place ;
    rdfs:range xsd:string .

lpo:sourceId a owl:DatatypeProperty ;
    rdfs:domain lpo:Place ;
    rdfs:range xsd:string ;
    rdfs:label "Source record ID" ;
    rdfs:comment "The original source record ID provided by the dataset." .

lpo:sourceUri a owl:DatatypeProperty ;
    rdfs:domain lpo:Place ;
    rdfs:range xsd:anyURI ;
    rdfs:label "Source URI" ;
    rdfs:comment "The URI linking to the original source record." .

# LPO Specific Entities
lpo:PlaceName a rdfs:Class ;
    rdfs:label "Place Name" ;
    rdfs:comment "A name associated with a place." .

lpo:PlaceType a rdfs:Class ;
    rdfs:label "Place Type" ;
    rdfs:comment "A type or classification of a place." .

lpo:PlaceGeom a rdfs:Class ;
    rdfs:label "Place Geometry" ;
    rdfs:comment "A geometry representing a place." .

lpo:PlaceWhen a owl:Class ;
    rdfs:label "Place When" ;
    rdfs:comment "Represents the temporal scope of an entire Place." .

lpo:PlaceLink a rdfs:Class ;
    rdfs:subClassOf skos:closeMatch ;
    rdfs:label "Place Link" ;
    rdfs:comment "A statement that links a place to an external authority record using a close match relationship." .

lpo:PlaceRelation a rdfs:Class ;
    rdfs:label "Place Relation" ;
    rdfs:comment "A relationship between places." .

lpo:PlaceDescription a rdfs:Class ;
    rdfs:label "Place Description" ;
    rdfs:comment "A textual description of a place." .

lpo:PlaceDepiction a rdfs:Class ;
    rdfs:label "Place Depiction" ;
    rdfs:comment "An image or depiction of a place." .

# Relationships to LPO Entities
lpo:hasName a owl:ObjectProperty ;
    rdfs:domain lpo:Place ;
    rdfs:range lpo:PlaceName ;
    rdfs:label "has name" ;
    rdfs:comment "Relates a place to its name." .

lpo:hasType a owl:ObjectProperty ;
    rdfs:domain lpo:Place ;
    rdfs:range lpo:PlaceType ;
    rdfs:label "has type" ;
    rdfs:comment "Relates a place to its type." .

lpo:hasGeometry a owl:ObjectProperty ;
    rdfs:domain lpo:Place ;
    rdfs:range lpo:PlaceGeom ;
    rdfs:label "has geometry" ;
    rdfs:comment "Relates a place to its geometry." .

lpo:whens a owl:ObjectProperty ;
    rdfs:domain lpo:Place ;
    rdfs:range rdf:List ;
    rdfs:label "whens" ;
    rdfs:comment "Relates a place to a collection of temporal information objects." .

lpo:hasLink a owl:ObjectProperty ;
    rdfs:domain lpo:Place ;
    rdfs:range lpo:PlaceLink ;
    rdfs:label "has link" ;
    rdfs:comment "skos:closeMatch to another record." .

lpo:hasDescription a owl:ObjectProperty ;
    rdfs:domain lpo:Place ;
    rdfs:range lpo:PlaceDescription ;
    rdfs:label "has description" ;
    rdfs:comment "Relates a place to its description." .

lpo:hasDepiction a owl:ObjectProperty ;
    rdfs:domain lpo:Place ;
    rdfs:range lpo:PlaceDepiction ;
    rdfs:label "has depiction" ;
    rdfs:comment "Relates a place to its depiction." .

lpo:hasRelation a owl:ObjectProperty ;
    rdfs:domain lpo:Place ;
    rdfs:range lpo:PlaceRelation ;
    rdfs:label "has relation" ;
    rdfs:comment "Relates a place to another place through a relationship." .

### Detailed Properties for Each LPO Entity
## PlaceName Properties
lpo:toponym a owl:DatatypeProperty ;
    rdfs:domain lpo:PlaceName ;
    rdfs:range xsd:string ;
    rdfs:label "toponym" ;
    rdfs:comment "The name or toponym of a place." .

## PlaceType Properties
lpo:typeIdentifier a owl:DatatypeProperty ;
    rdfs:domain lpo:PlaceType ;
    rdfs:range xsd:string ;
    rdfs:label "type identifier" ;
    rdfs:comment "A vocabulary identifier for the type of place." .

lpo:typeLabel a owl:DatatypeProperty ;
    rdfs:domain lpo:PlaceType ;
    rdfs:range xsd:string ;
    rdfs:label "vocabulary type label" ;
    rdfs:comment "A vocabulary label for type of place." .

lpo:sourceLabels a owl:ObjectProperty ;
    rdfs:domain lpo:PlaceType ;
    rdfs:range rdf:List ;
    rdfs:label "source labels" ;
    rdfs:comment "The source-specific labels for the type." .

## PlaceGeom Properties
lpo:geoType a owl:DatatypeProperty ;
    rdfs:domain lpo:PlaceGeom ;
    rdfs:range xsd:string ;
    rdfs:label "geometry type" ;
    rdfs:comment "The type of geometry (e.g., Point, Polygon)." .

lpo:coordinates a owl:DatatypeProperty ;
    rdfs:domain lpo:PlaceGeom ;
    rdfs:range rdf:List ;
    rdfs:label "coordinates" ;
    rdfs:comment "The coordinates of the geometry." .

lpo:geowkt a owl:DatatypeProperty ;
    rdfs:domain lpo:PlaceGeom ;
    rdfs:range xsd:string ;
    rdfs:label "WKT string" ;
    rdfs:comment "WKT representation of a geometry" .


# PlaceRelation Properties
lpo:relationType a owl:ObjectProperty ;
    rdfs:domain lpo:PlaceRelation ;
    rdfs:range rdfs:Resource ; 
    rdfs:label "relation type" ;
    rdfs:comment "Relation type linking to a concept from an external vocabulary." .

lpo:relationTo a owl:DatatypeProperty ;
    rdfs:domain lpo:PlaceRelation ;
    rdfs:range xsd:anyURI ;
    rdfs:label "relation to" ;
    rdfs:comment "URI target of the relation." .

lpo:relationLabel a owl:DatatypeProperty ;
    rdfs:domain lpo:PlaceRelation ;
    rdfs:range xsd:string ;
    rdfs:label "label for a place relation" .

# PlaceLink Properties
lpo:linkIdentifier a owl:DatatypeProperty ;
    rdfs:domain lpo:PlaceLink ;
    rdfs:range xsd:anyURI ;
    rdfs:label "link identifier" ;
    rdfs:comment "An identifier or URI linking to an external record." .
lpo:linkType a owl:DatatypeProperty ;
    rdfs:domain lpo:PlaceLink ;
    rdfs:range xsd:string ;
    rdfs:label "link type" ;
    rdfs:comment "name of relation" .

##
## Generic elements: 
## Label, language, certainty, Citation, When
##


# Label
lpo:Label a rdfs:Class ;
    rdfs:label "Label" ;
    rdfs:comment "A textual label associated with an entity, possibly in a specific language." .

lpo:hasLabel a owl:ObjectProperty ;
    rdfs:domain [ a owl:Class ;
              owl:unionOf (lpo:When lpo:Citation lpo:Period)] ;
    rdfs:range lpo:Label ;
    rdfs:label "has label" ;
    rdfs:comment "Relates an entity to associated label." .

lpo:labelValue a owl:DatatypeProperty ;
    rdfs:domain lpo:Label ;
    rdfs:range xsd:string ;
    rdfs:label "label value" ;
    rdfs:comment "The text of the label." .

lpo:language a owl:DatatypeProperty ;
    rdfs:domain [ a owl:Class ;
                    owl:unionOf (lpo:Label lpo:PlaceName )];
    rdfs:range xsd:string ;
    rdfs:label "language" ;
    rdfs:comment "The language of the label text." .

lpo:certainty a owl:DatatypeProperty ;
    rdfs:domain [ a owl:Class ;
                  owl:unionOf (lpo:When lpo:PlaceRelation lpo:PlaceGeom) ] ;
    rdfs:range xsd:string ;
    rdfs:label "certainty" ;
    rdfs:comment "The certainty level of a statement" .

# Citations (common to names, geoms, relations)
lpo:Citation a owl:Class ;
    rdfs:label "Citation" ;
    rdfs:comment "A citation or reference associated with an entity" .

lpo:year a owl:DatatypeProperty ;
    rdfs:domain lpo:Citation ;
    rdfs:range xsd:gYear ;
    rdfs:label "year" ;
    rdfs:comment "The year of the citation, 4 digits with optional '-' for BCE)." .

# When (common to types, relations, citations, geometry(?)
lpo:When a rdfs:Class ;
    rdfs:label "When" ;
    rdfs:comment "Temporal information associated with an element." .

lpo:hasWhen a owl:ObjectProperty ;
    rdfs:label "has when" ;
    rdfs:comment "Relates an entity to its temporal information" ;
    rdfs:domain [ a owl:Class ;
                  owl:unionOf (lpo:PlaceType lpo:PlaceRelation lpo:Citation) ] ;
    rdfs:range lpo:When .

# timespans property (list)
lpo:timespans a owl:ObjectProperty ;
    rdfs:domain lpo:When ;
    rdfs:range rdf:List ;
    rdfs:label "timespans" ;
    rdfs:comment "The timespans associated with the place." .

# Timespan Class
lpo:Timespan a rdfs:Class ;
    rdfs:label "Timespan" ;
    rdfs:comment "A timespan associated with a place." .

# Start and End Properties for Timespan
lpo:start a owl:ObjectProperty ;
    rdfs:domain lpo:Timespan ;
    rdfs:range lpo:TimeExpression ;
    rdfs:label "start" ;
    rdfs:comment "The start time of the timespan." .

lpo:end a owl:ObjectProperty ;
    rdfs:domain lpo:Timespan ;
    rdfs:range lpo:TimeExpression ;
    rdfs:label "end" ;
    rdfs:comment "The end time of the timespan." .

# TimeExpression Class
lpo:TimeExpression a rdfs:Class ;
    rdfs:label "Time Expression" ;
    rdfs:comment "A time expression, either a specific date or a range." .

# In, Earliest, and Latest Properties for TimeExpression
lpo:in a owl:DatatypeProperty ;
    rdfs:domain lpo:TimeExpression ;
    rdfs:range xsd:dateTime ;
    rdfs:label "in" ;
    rdfs:comment "A specific date/time expression." .

lpo:earliest a owl:DatatypeProperty ;
    rdfs:domain lpo:TimeExpression ;
    rdfs:range xsd:dateTime ;
    rdfs:label "earliest" ;
    rdfs:comment "The earliest date/time expression." .

lpo:latest a owl:DatatypeProperty ;
    rdfs:domain lpo:TimeExpression ;
    rdfs:range xsd:dateTime ;
    rdfs:label "latest" ;
    rdfs:comment "The latest date/time expression." .

# periods property (list)
lpo:periods a owl:ObjectProperty ;
    rdfs:domain lpo:When ;
    rdfs:range rdf:List ;
    rdfs:label "periods" ;
    rdfs:comment "The periods associated with the place." .

# Period Class
lpo:Period a rdfs:Class ;
    rdfs:label "Period" ;
    rdfs:comment "A historical or cultural period." .

# Name and URI Properties for Period
lpo:periodName a owl:DatatypeProperty ;
    rdfs:domain lpo:Period ;
    rdfs:range xsd:string ;
    rdfs:label "period name" ;
    rdfs:comment "The name of the period." .

lpo:periodURI a owl:DatatypeProperty ;
    rdfs:domain lpo:Period ;
    rdfs:range xsd:anyURI ;
    rdfs:label "period uri" ;
    rdfs:comment "The URI of the period." .

lpo:duration a owl:DatatypeProperty ;
    rdfs:domain lpo:When ;
    rdfs:range xsd:duration ;
    rdfs:label "duration" ;
    rdfs:comment "The duration of the timespan(s) or period(s)." .

# PlaceDescription Properties
lpo:descriptionValue a owl:DatatypeProperty ;
    rdfs:domain lpo:PlaceDescription ;
    rdfs:range xsd:string ;
    rdfs:label "description value" .

lpo:descriptionSource a owl:DatatypeProperty ;
    rdfs:domain lpo:PlaceDescription ;
    rdfs:range xsd:anyURI;
    rdfs:label "description source URI" .

# PlaceDepiction Properties
lpo:depictionTitle a owl:DatatypeProperty ;
    rdfs:domain lpo:PlaceDepiction ;
    rdfs:range xsd:string ;
    rdfs:label "depiction value" .

lpo:depictionLicence a owl:DatatypeProperty ;
    rdfs:domain lpo:PlaceDepiction ;
    rdfs:range xsd:anyURI;
    rdfs:label "depiction source URI" .

